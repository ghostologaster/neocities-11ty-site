<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">
		
		{#- Uncomment this if youâ€™d like folks to know that you used Eleventy to build your site!  #}
		{#- <meta name="generator" content="{{ eleventy.generator }}"> #}

		{#-
		CSS bundles are provided via the `eleventy-plugin-bundle` plugin:
		1. You can add to them using `{% css %}`
		2. You can get from them using `{% getBundle "css" %}` or `{% getBundleFileUrl "css" %}`
		3. You can do the same for JS
		4. Learn more: https://github.com/11ty/eleventy-plugin-bundle
		#}
		<noscript>
    		<style>
        		.hideifnoscript {display:none;}
    		</style>
		</noscript>

		{#- Add the contents of a file to the bundle #}
		{%- css %}{% include "asset/css/index.css" %}{% endcss %}
		{% if homepage === "yes" %}
		<link rel="stylesheet" href="https://neossg.neocities.org/onionring.css">
		{% endif %}
		<link rel="stylesheet" href="{% getBundleFileUrl "css" %}"> 
		
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">
		<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#ffc40d">
		<meta name="theme-color" content="#ffffff">
		
		<script>   
			var el = document.getElementsByTagName("html")[0];

			if (localStorage.getItem("mode") === "changed") {
				el.classList.add("dark-toggle");
			} else {
				localStorage.setItem("mode", "unchanged");
			}

			window.matchMedia('(prefers-color-scheme: dark)')
				.addEventListener('change', (e) => {
				localStorage.setItem("mode", "unchanged");
			})

			function toggleDark() {
			
			if (localStorage.getItem("mode") === "unchanged") {
				el.classList.add("dark-toggle");
				localStorage.setItem("mode", "changed");
			} else {
				el.classList.remove("dark-toggle");
				localStorage.setItem("mode", "unchanged");
			}
			};
		</script>

		{% if latex == "yes" %}
		<!-- mathjax -->
		<script defer src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
		<script>
		MathJax = {
			tex: {inlineMath: [['$', '$'], ['\\(', '\\)']]}
		};
		</script>
		<script defer id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js"></script>
		{% endif %}

		<script data-goatcounter="https://ghostologaster.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
	</head>
	<body>

		<header>
		<nav>
				<h2 class="visually-hidden">Top level navigation menu</h2>
				<ul class="nav">
				{%- for entry in collections.all | eleventyNavigation %}
					<li class="nav-item"><a href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a></li>
				{%- endfor %}
				<li class="nav-item toggle-dark-button hideifnoscript" onclick="toggleDark()" aria-description="toggle between dark or light mode">dark/light</li>
				</ul>
			</nav>
		</header>

		<main>
			{{ content | safe }}
		</main>

		<footer>
        {% if permalink !== "404.html" %} &copy; 2024 ghost. {% endif %}{% if post === "yes"  %} See <a href="/about">about page</a> for more information about me and the contents on this page.{% endif %}
		</footer>

		<!-- Current page: {{ page.url | htmlBaseUrl }} -->
		{% if post === "yes" %}
		{% endif %}
	</body>
</html>
